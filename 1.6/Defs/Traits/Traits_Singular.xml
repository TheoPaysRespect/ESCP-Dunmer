<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- blessings -->

  <TraitDef>
    <defName>ESCP_Dunmer_AlmalexiaBlessing</defName>
    <commonality>0.05</commonality>
    <degreeDatas>
      <li>
        <label>blessing of Almalexia</label>
        <description>{PAWN_nameDef} has received the blessing of Almalexia. {PAWN_nameDef} knows that even in death, the Lady of Mercy is with them.</description>
		<statOffsets>
			<MentalBreakThreshold>-0.10</MentalBreakThreshold>
			<ImmunityGainSpeed>+0.10</ImmunityGainSpeed>
        </statOffsets>
		<marketValueFactorOffset>+0.15</marketValueFactorOffset>
	  </li>
    </degreeDatas>
  </TraitDef>
  
  <TraitDef>
